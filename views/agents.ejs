        #img {
            width: 200px;
            height: 100px;
            border-radius: 4%;
        }

        #box {
            width: 24%;
            align-items: center;
            text-align: center;
            border: 1px solid black;
            border-radius: 4%;
            margin: 1px;
        }

        .row {
            margin-left: 1%;
        }

        .buttons {
            display: flex;
            gap: 1rem;
        }

        .btn {
            width: 20%;
            padding: 1% 2%;
            margin: 2% auto;
        }
    </style>
</head>

<body>
    <section class="agents">
        <div class="row">
            <% agent.forEach(function(ag){ %>
            <div id="box" class="box col-lg-3">
                <img id="img" class="card-img-top" src=<%= '/uploads/' +  ag.image %> alt="image">
                <h3> <%= ag.name %> </h3>
                <span> <%= ag.role %> </span> <br>
                <span><%= ag.mobile %> </span>
                <div class="share">
                    <a href='mailto:' <%= ag.email %> class="fas fa-envelope"></a>
                    <a href='https://<%=  ag.facebook %>' class="fab fa-facebook-f"></a>
                    <a href='https://<%=  ag.twitter  %>' class="fab fa-twitter"></a>
                    <a href='https://<%=  ag.instagram  %>' class="fab fa-instagram"></a>
                </div>
            </div>
            <% }) %>
        </div>
        <div class="buttons">
            <a href="#" class="btn btn-dark btn-md">Register new agent</a>
        </div>
    </section>
</body>

</html>