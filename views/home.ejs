        font-family: "Nunito Sans", sans-serif;
      }

      /* media queries  */
      @media (max-width: 991px) {
        section {
          padding: 1.5rem;
        }

        .slogan {
          font-size: 4rem;
          color: var(--red);
          font-weight: 900 bolder;
        }
      }

      .image {
        width: 100px;
        height: 100px;
        border-radius: 100%;
      }

      @media (max-width: 450px) {
        html {
          font-size: 50%;
