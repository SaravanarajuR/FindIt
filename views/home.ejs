  <body>
    <!-- header section starts  -->

    <header>
      <nav class="navbar" style="font-size: 1.4rem">
        <div class="container-fluid">
          <a href="/home" class="logo navbar-brand" id="logo"
            ><span>Find</span>It</a
          >
          <div class="tog">
            <button
              class="navbar-toggler filter-btn"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarText"
              aria-controls="navbarText"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
              <ul
                class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-text d-flex"
              >
                <li class="nav-item">
                  <a class="nav-link" href="#home">home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#services">services</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#featured">featured</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#agents">agents</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#contact">contact</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" class="logout" href="/logout">
                    <button class="btn btn-sm">LOGOUT</button>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <section class="mid" id="home" style="font-size: 1rem">
      <p class="slogan">Home Sweet Home</p>
      <div class="salebtn buttons-container">
        <a href="/rent" class="btn">for rent</a>
        <a href="/sale/addhome" class="btn">Seller</a>
        <a href="/predict" class="btn">Predictions</a>
      </div>
    </section>

    <section class="services" id="services">
      <h1 class="heading">our <span>services</span></h1>

      <div class="box-container">
        <div class="box">
          <img src="images/s-2.png" alt="" />
          <h3>Renting home</h3>
          <p>
            You can view homes available for rent choose the one you like and
            get contact information of the seller
          </p>
          <a href="#" class="btn">learn more</a>
        </div>

        <div class="box">
          <img src="images/s-3.png" alt="" />
          <h3>Selling home</h3>
          <p>
            Seller can add their homes to the website and get people across the
            country know your offers
          </p>
          <a href="#" class="btn">learn more</a>
        </div>
      </div>
    </section>

    <!-- services section ends -->

    <!-- featured section starts  -->

    <section class="featured" id="featured">
      <h1 class="heading"><span>featured</span> properties</h1>
      <div class="box-container">
        <% home.forEach(function(mat1){ %>

        <div class="box">
          <div class="image-container">
            <div>
              <img
                class="img"
                src="/uploads/<%= mat1.telekomTvOffer %>.jpg"
                alt="home"
              />
            </div>
          </div>
          <div class="content">
            <div class="price">
              <h3><span> $ </span> <%= mat1.totalRent %>/Month</h3>
            </div>
            <div class="location">
              <h3><%= mat1.typeOfFlat %></h3>
              <p><%= mat1.regio1 %></p>
            </div>
            <div class="details">
              <h3><i class="fas fa-expand"></i> <%= mat1.noRooms %></h3>
            </div>
            <div class="buttons">
              <a href="/homedetails/:<%= mat1._id %>" class="btn"
                >view details</a
              >
            </div>
          </div>
        </div>

        <% }) %>
      </div>
      <div style="text-align: center; margin: 2% auto" class="buttons">
        <a href="/rent" class="btn btn-lg">Browse all products</a>
      </div>
    </section>

    <!-- featured section ends -->

    <section class="agents" id="agents">
      <h1 class="heading">professional <span>agents</span></h1>

      <div class="box-container row">
        <% home.forEach(function(ag){ %>
        <div class="box col-lg-3">
          <img
            class="img"
            src="/uploads/<%= ag.telekomTvOffer %>.jpg"
            alt="home"
          />
          <h3><%= ag.regio1 %></h3>
          <span> <%= ag.serviceCharge %> </span> <br />
          <span><%= ag.totalrent %> </span>
          <div class="share">
            <a href="mailto:" <%="ag.email" %> class="fas fa-envelope"></a>
            <a href="https://<%=  ag.facebook %>" class="fab fa-facebook-f"></a>
            <a href="https://<%=  ag.twitter  %>" class="fab fa-twitter"></a>
            <a
              href="https://<%=  ag.instagram  %>"
              class="fab fa-instagram"
            ></a>
          </div>
        </div>
